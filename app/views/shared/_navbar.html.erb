<div class="navbar-wagon">

  <%= link_to root_path do %>
    <%= image_tag 'field.svg' %> Sportify</a>
  <% end %>
  <!-- Right Navigation -->
  <% if user_signed_in? %>

    <div class="navbar-wagon-right">
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <p class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %>'s account</p>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to bookings_path do %>
                <i class="fas fa-calendar-check"></i> <%= t(".profile", default: "My Bookings") %>
              <% end %>
            </li>
            <li>
              <%= link_to fields_path do %>
                <i class="fas fa-flag"></i> <%= t(".settings", default: "My Fields") %>
              <% end %>
            </li>
            <li>
              <%= link_to new_field_path do %>
                <i class="fas fa-plus-circle"></i> <%= t(".settings", default: "Add a Field") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
  <% end %>
</div>

