<div class="city-banner">
  <div class="city-banner-title">
    <h1>Fields available in <%= @city_name.capitalize %></h1>
  </div>

  <div class="city-banner-filter">
    <%= link_to 'Choose category', '', class:'btn-sportify-green' %>
  </div>

</div>

<div class="container">
  <div class="row">
    <% @fields.each do |field| %>
      <div class="col-xs-12 col-sm-6 col-md-4" style='background-image: <%= field.picture %>'>

        <div class="card-icon">

        </div>

        <div class="card-title">
          <h1><%= field.name %></h1>
        </div>
      </div>
    <% end %>
  </div>
</div>
